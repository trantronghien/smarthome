<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tableRow1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dimmableItemRowText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:ellipsize="end"
            android:gravity="start"
            android:scrollHorizontally="true"
            android:text="TEN THIET BI"
            android:textColor="@color/actionbar_text"
            android:textSize="@dimen/font_size_1" />
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dimmableItemRowText"
            android:id="@+id/relativeDevice"
            android:layout_marginTop="2dp">

            <ImageButton
                android:id="@+id/dimmableItemButtonPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/margin_h"
                android:layout_marginRight="@dimen/margin_h"
                android:layout_marginTop="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/light_power_btn_off" />


            <!--<com.shawnlin.numberpicker.NumberPicker-->
            <!--android:visibility="invisible"-->
            <!--android:id="@+id/dimmableItemRowSlider"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="1dp"-->
            <!--android:layout_toLeftOf="@+id/dimmableItemButtonMore"-->
            <!--android:layout_toRightOf="@+id/dimmableItemButtonPower"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:paddingRight="8dp"-->
            <!--app:np_dividerColor="@color/color_divider"-->
            <!--app:np_height="100dp"-->

            <!--app:np_max="100"-->
            <!--app:np_min="0"-->
            <!--app:np_selectedTextColor="@color/color_selected"-->
            <!--app:np_textColor="@color/color_text_numberpicker"-->
            <!--app:np_textSize="50dp"-->
            <!--app:np_typeface="@string/roboto_medium"-->
            <!--app:np_wheelItemCount="3"-->
            <!--app:np_width="20dp" />-->
            <com.aigestudio.wheelpicker.WheelPicker
                android:id="@+id/dimmableItemRowSlider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/dimmableItemButtonMore"
                android:layout_toRightOf="@+id/dimmableItemButtonPower"
                android:background="@color/dialog_row_bg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                aigestudio:wheel_atmospheric="true"
                aigestudio:wheel_curved="false"
                aigestudio:wheel_cyclic="false"
                aigestudio:wheel_indicator="false"
                aigestudio:wheel_indicator_color="#050505"
                aigestudio:wheel_indicator_size="1sp"
                aigestudio:wheel_item_text_color="#c7c7f2"
                aigestudio:wheel_item_text_size="30dp"
                aigestudio:wheel_selected_item_text_color="#023671"
                aigestudio:wheel_visible_item_count="4" />

            <ImageButton
                android:id="@+id/dimmableItemButtonMore"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/light_status_icon" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/relativeDevice"
            android:background="#000000"
            />
    </RelativeLayout>

</TableRow>
